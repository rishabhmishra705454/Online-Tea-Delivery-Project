<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card3"
                android:padding="16dp">


                <TextView
                    android:id="@+id/textDeliveryLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="0.05"
                    android:text="DELIVERY LOCATION"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:id="@+id/relariveLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textDeliveryLocation"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_location_on_24"
                        map:tint="@color/black" />

                    <TextView
                        android:id="@+id/setlocality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/imageLocation"
                        android:fontFamily="@font/roboto_black"
                        android:text="Please wait..."
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/change_background"
                        android:padding="5dp"
                        android:text=" CHANGE "
                        android:textColor="@color/colorSecondary" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/showAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relariveLayout2"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional details for delivery"
                android:layout_margin="16dp"
                android:fontFamily="@font/roboto_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/change_background"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="Phone no"
                    app:boxBackgroundColor="@color/card_bg_color"
                    app:boxStrokeColor="@color/colorSecondary"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/black"
                    app:startIconTint="@color/black"
                    android:id="@+id/textPhoneNo2">


                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/card_bg_color"
                        android:fontFamily="@font/roboto"
                        android:inputType="text"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="House / Flat / Block No."
                    app:boxBackgroundColor="@color/card_bg_color"
                    app:boxStrokeColor="@color/colorSecondary"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/black"
                    app:startIconTint="@color/black"
                    android:id="@+id/inputHouseNo2">


                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/card_bg_color"
                        android:fontFamily="@font/roboto"
                        android:inputType="text"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Landmark"
                    app:boxBackgroundColor="@color/card_bg_color"
                    app:boxStrokeColor="@color/colorSecondary"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/black"
                    app:startIconTint="@color/black"
                    android:id="@+id/inputLandMark2">


                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/card_bg_color"
                        android:fontFamily="@font/roboto"
                        android:inputType="text"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_black"
                    android:text="Choose Payment Method" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_bg_color"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/onlinePaymentIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_round_payment_24"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/textOnlinePayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/onlinePaymentIcon"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Online Payment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textOnlinePayment"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/onlinePaymentIcon"
                    android:fontFamily="@font/roboto"
                    android:text="Card, UPI, Netbanking, Wallets" />

                <CheckBox
                    android:id="@+id/checkboxOnline"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp" />


            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_bg_color"
                android:layout_marginBottom="150dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/onlinePaymentIcon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/noterupee" />

                <TextView
                    android:id="@+id/textOnlinePayment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/onlinePaymentIcon2"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Pay on Delivery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textOnlinePayment2"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/onlinePaymentIcon2"
                    android:fontFamily="@font/roboto"
                    android:text="Pay with cash" />

                <CheckBox
                    android:id="@+id/checkboxCod"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp" />


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/orderNowBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/roboto_medium"
            android:text="Order now"
            android:enabled="false"
            android:textColor="@color/black" />

    </RelativeLayout>
</RelativeLayout>