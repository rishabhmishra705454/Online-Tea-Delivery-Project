<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="@color/card_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cutting Chai"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/rupeeSymbol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemTitle"
            android:text="\u20B9"/>

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:fontFamily="@font/roboto_bold"
            android:layout_below="@id/itemTitle"
            android:layout_toRightOf="@id/rupeeSymbol1"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>




            <ImageView
                android:id="@+id/minusImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_horizontal_rule_24"
                android:background="@drawable/white_round_background"
                android:elevation="2dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/noofforder"
                android:layout_marginRight="10dp"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/noofforder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_black"
                android:layout_toLeftOf="@id/addImg"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/addImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_add_24"
                android:background="@drawable/white_round_background"
                android:elevation="2dp"
                android:layout_toLeftOf="@id/btnDelete"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="2dp"/>











    </RelativeLayout>

</androidx.cardview.widget.CardView>